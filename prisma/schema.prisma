// schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Report {
  id               String    @id @default(uuid())
  createdAt        DateTime  @default(now())
  group            String
  shareToken       String    @unique
  students         Student[]
  recommendations  String    // JSON stored as TEXT
  distribution     String    // JSON stored as TEXT
  
}

model Student {
  id               String   @id @default(uuid())
  reportId         String
  report           Report   @relation(fields: [reportId], references: [id])
  name             String
  lastName         String
  reading          Float
  listening        Float
  speaking         Float
  writing          Float
  speakingFeedback String?
  writingFeedback  String?
  shareToken       String   @unique
  recommendations  String   // JSON stored as TEXT
}

// For managing access to shared reports
model SharedAccess {
  id        String    @id @default(uuid())
  token     String    @unique
  createdAt DateTime  @default(now())
  expiresAt DateTime?
  isActive  Boolean   @default(true)
}